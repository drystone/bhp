<?xml version="1.0"?>

<controls>
  <control id="sitting_room_rad" type="fs20" device-code="1334">
    <or>
      <state thermostat-id="sitting_room"/>
      <state thermostat-id="dump"/>
    </or>
  </control>
  <control id="kitchen_rad" type="fs20" device-code="1234">
    <or>
      <state thermostat-id="kitchen"/>
      <state thermostat-id="dump"/>
    </or>
  </control>
  <control id="so_bedroom_rad" type="fs20" device-code="1534">
    <state thermostat-id="so_bedroom"/>
  </control>
  <control id="ja_bedroom_rad" type="bbsb" device-code="a01">
    <state thermostat-id="ja_bedroom"/>
  </control>
  <control id="bathroom_rad" type="udin" device-code="4">
    <or>
      <state thermostat-id="bathroom"/>
      <state thermostat-id="dump"/>
    </or>
  </control>
  <!-- central heating pump + zone valve -->
  <control id="central_heating" type="udin" device-code="2">
    <or>
      <state thermostat-id="sitting_room"/>
      <state thermostat-id="bathroom"/>
      <state thermostat-id="so_bedroom"/>
      <state thermostat-id="kitchen"/>
      <state thermostat-id="ja_bedroom"/>
      <state thermostat-id="dhw"/>
      <state thermostat-id="dump"/>
    </or>
  </control>
  <!-- boiler pump + boiler -->
  <control id="boiler" type="udin" device-code="1">
    <state thermostat-id="boiler"/>
  </control>
  <control id="dhw" type="udin" device-code="3">
    <or>
      <state thermostat-id="dhw"/>
      <state thermostat-id="dump"/>
    </or>
  </control>
  <control id="solar" type="udin" device-code="5">
    <state thermostat-id="solar"/>
  </control>
</controls>

